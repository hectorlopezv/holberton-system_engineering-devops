#usr/bin/env bash
#double the number of server by adding x-serverd-by headers to identify which webserver is 
apt -y update
apt -y upgrade
apt install -y nginx
ufw allow 'Nginx HTTP'
echo "<html><body>Holberton School</body></html>" > /var/www/html/index.html
echo "Holberton School" > /var/www/html/index.html
STR="         location /redirect_me
        {
                return 301 https://www.youtube.com;

        }
        error_page 404 /404.html;
        location = /404.html 
        {
            root /var/www/error/internal;
        }
        "
sed -i "s/server_name _/ $STR/g" /etc/nginx/sites-available/default
sed  '/}/a add_header X-Served-By "$hostname"' /etc/nginx/sites-available/default
nginx -s reload